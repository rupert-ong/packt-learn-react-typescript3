{
  "compilerOptions": {
    // required to be shared (as a dependency)
    "composite": true,
    "declaration": true,
    "declarationMap": true,

    "target": "es5",
    "outDir": "dist",
    "module": "es6",
    "sourceMap": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "rootDir": "src"
  },
  "include": ["src/**/*"]
}
